# Application
PROJECT_NAME="Sistema Rehabilitacion"
VERSION="1.0.0"
API_V1_PREFIX="/api/v1"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=secretkey
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# PostgreSQL
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sistema_rehabilitacion
POSTGRES_PORT=5432

# MongoDB (opcional, para logs o datos no estructurados)
MONGODB_URL=mongodb://localhost:27017
MONGODB_DB=sistema_rehabilitacion_logs

# CORS
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Email (opcional para recuperación de contraseña)
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
